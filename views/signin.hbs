<section class="sign form-container">
  <header class="form-header">
    {{> flash_message}}
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Enjoy yourself and be comfortable </p>
  </header>
  
  {{#if msg}}
  <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}}
  <form method="post" action="/signin" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" type="email" class="input-text input" placeholder="Votre email" name="email" >
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" type="password"  class="input-text input" placeholder="Votre mot de passe"  name="password">
    </div>
    <button class="button-primary white">Log in !</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/signup" class="button-link-form">Sign Up</a></p>
</section>